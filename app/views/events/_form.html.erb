<%= simple_form_for(form_object1) do |f|%>
  <%=f.error_notification%>
  <div class="field">
    <div class="control">
      <%= f.input :title, label: "Title: ", 
          input_html: { class: "text"}, 
          wrapper: false, 
          label_html: {class: "label"}, 
          placeholder: "Title of event...",
          autofocus: true,
          required: true %>
    </div>
    <div class="control">
      <%= f.input object_date, as: :datetime, label: "Date: ", 
          input_html: { class: "date", value: Time.current}, 
          wrapper: false, 
          label_html: {class: "label"},
          required: true
          %>
    </div>
    <div class="control">
      <%= f.input object_desciption,label: "Description:",
          input_html: { class: "textarea "}, 
          wrapper: false, 
          label_html: {class: "label"}, 
          placeholder: "Description",
          required: true
          %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info"%>
<% end %>
